<% layout("/layouts/BoilerPlate") %>
<body>
   
<div class=" row ms-5">
    <div class="col-8 offset-2">
    <h2>Create a New Listing</h2>
    <form method="POST" action="/listings" novalidate class=" needs-validation" enctype="multipart/form-data" >
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input class="form-control" required type="text" name="listing[title]" placeholder="Enter Title">
         <div class="valid-feedback">Title looks good</div>
        </div>
       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea class="form-control" required type="text" name="listing[description]" ></textarea>
         <div class="invalid-feedback">Description should be Valid</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
         <input type="file"  class="form-control" name="listing[image]">
         </div>
         <div class="row">
<div class="mb-3 col-md-4">
             <label for="price" class="form-label">Price</label>
        <input required class="form-control" name="listing[price]" placeholder="1,200">
        <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
              <label for="location" class="form-label">Location</label>
        <input type="text" required class="form-control" name="listing[location]" placeholder="Enter Location">
         <div class="invalid-feedback">Location should be Valid</div>
        </div>
         </div>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
        <input type="text" required class="form-control" name="listing[country]" placeholder="India">
         <div class="invalid-feedback"> Country name should be Valid</div>
        </div>
        <br> <br>
        <button class="btn btn-dark mb-4 add-btn">Add</button>
    </form>
    </div>
</div>

    
<script src="https://kit.fontawesome.com/571e6d2ade.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script src="/public/JS/validation.js"></script>
  </body>
</body>
