<% layout("/layouts/BoilerPlate") %>
<body>
<div class="row mt-3">
        <div class="col-8 offset-2 ">
     <h2 id="h2-edit">Edit your Listing</h2>
    <form method="POST" enctype="multipart/form-data" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
         <div class="mb-3">
            <label for="title" class="form-label">Title</label>
 <input type="text" required class="form-control" name="listing[title]" value="<%= listing.title %>">
<div class="valid-feedback">Title looks good</div>       
</div>
       
    <div class="mb-3">
            <label for="description" class="form-label">Description</label>
 <textarea type="text" required class="form-control" name="listing[description]"><%= listing.description %></textarea>
<div class="invalid-feedback">Description should be valid</div>        
</div>
        
<div class="mb-3">
    Original Image Preview <br>
<img src="<%= listing.image.url%>"  alt="Image Preview" style="filter: blur(.7px)" class="img-fluid h-25 w-25 rounded">
</div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
 <input type="file" class="form-control" name="listing[image]">        
</div>
         <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
<input type="number" required class="form-control" name="listing[price]" value="<%= listing.price %>">
<div class="invalid-feedback">Price should be valid</div>          
</div>
         <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
 <input type="text" required class="form-control" name="listing[location]" value="<%= listing.location %>">
<div class="invalid-feedback">Location should be valid</div>          
</div>
        </div>
         <div class="mb-3">
            <label for="country" class="form-label">Country</label>
 <input type="text" required class="form-control" name="listing[country]" value="<%= listing.country %>">
<div class="invalid-feedback">Country should be valid</div>          
</div>

        <br> <br> 
        <button class="btn mb-4 btn-dark edit-btn">Edit</button>
    </form>
</div>
    </div>
     
<script src="https://kit.fontawesome.com/571e6d2ade.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

</body>
